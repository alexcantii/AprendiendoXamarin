<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Praticascreem.View.LoginPage">
    <ContentPage.Content>


        <Frame>

            <StackLayout BackgroundColor="#ffffff">
                
                
                <Label Text="Login" HorizontalOptions="Center" Padding="40" FontSize="Large"/>

                <Image Source="Usuario" WidthRequest="120" BackgroundColor="Transparent"></Image>

            

                <Label Text="Digite su Usuario y Contraseña" HorizontalOptions="Center" Padding="40" FontSize="Medium"/>



                <StackLayout>


                    <Label Text="Email" VerticalOptions="Center"/>

                    <Entry x:Name="EmailTxt" Keyboard="Email" Placeholder="sample@email.com" FontSize="15" Text="{Binding EmailTxt,Mode=TwoWay}" IsEnabled="{Binding IsEnabledTxt}"/>



                    <Label Text="Password" VerticalOptions="Center"/>

                    <Entry x:Name="PasswordTxt" IsPassword="True" Placeholder="*************" FontSize="15" Text="{Binding PasswordTxt,Mode=TwoWay}" IsEnabled="{Binding IsEnabledTxt}"/>



                </StackLayout>

                <ActivityIndicator IsRunning="{Binding IsRunnigTxt}" 
                                   IsVisible="{Binding IsVisbleTxt}"
                                    IsEnabled="{Binding IsEnableTxt}"
                                   Scale="0.8"
                                   Color="#B4995D">

                </ActivityIndicator>


                <StackLayout Orientation="Horizontal" Margin="30,0" VerticalOptions="CenterAndExpand">

                    <CheckBox HorizontalOptions="Start" VerticalOptions="CenterAndExpand" Color="#767677"/>
                    <Label Text="Remember me" TextColor="#767677" HorizontalOptions="FillAndExpand"  FontSize="13" FontAttributes="Bold" />
                    <Label  Text="Forgot Your Password?" HorizontalOptions="FillAndExpand" TextColor="#007bff">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGesturecognizer_Tapped">
                            </TapGestureRecognizer>
                        </Label.GestureRecognizers>
                    </Label>



                </StackLayout>


                <StackLayout Margin="30.0" Orientation="Horizontal" VerticalOptions="CenterAndExpand">
                    <Button Command="{Binding LoginCommand}"  Text="Login" BorderRadius="23"  Background="#17a2b8" HorizontalOptions="FillAndExpand" IsEnabled="{Binding IsEnabledTxt}" TextColor="white" HeightRequest="46"></Button>
                    <Button  Text="Registrar" BorderRadius="23"  Background="#007bff" HorizontalOptions="FillAndExpand" IsEnabled="{Binding IsEnabledTxt2}"   TextColor="white" HeightRequest="46" Clicked="Registrar_Cliked"></Button>


                </StackLayout>

            </StackLayout>


        </Frame>




    </ContentPage.Content>
</ContentPage>